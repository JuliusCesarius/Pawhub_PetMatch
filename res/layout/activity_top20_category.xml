<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient"
        tools:context=".PetmatchResult" >

        <TextView
            android:id="@+id/lblTop20"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#4ABCCE"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingTop="6dp"
            android:text="@string/title_activity_top20_category"
            android:textColor="#FFFFFF"
            android:textSize="21sp" />

        <LinearLayout
            android:id="@+id/layoutTableTop20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblTop20"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin" >

            <TableLayout
                android:id="@+id/top20table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/corner_round" >
            </TableLayout>
            
        </LinearLayout>
    </RelativeLayout>

</ScrollView>