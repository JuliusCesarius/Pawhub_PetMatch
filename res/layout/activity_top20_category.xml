<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".PetmatchResult" >

    <TextView
        android:id="@+id/lblTop20"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:background="#464648"
        android:gravity="center"
        android:lines="5"
        android:paddingLeft="10dp"
        android:paddingTop="6dp"
        android:text="@string/title_activity_top20_category"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

	<LinearLayout
	    android:id="@+id/layoutTableTop20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/lblTop20"
            android:paddingBottom="@dimen/activity_vertical_margin"
		    android:paddingLeft="@dimen/activity_horizontal_margin"
		    android:paddingRight="@dimen/activity_horizontal_margin"
		    android:paddingTop="@dimen/activity_vertical_margin"
	    >
	    
	    <ListView
			android:id="@+id/listTableTop20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:footerDividersEnabled="false"
            android:layout_gravity="fill_horizontal"
             >
        </ListView>      
	    
	</LinearLayout>


</RelativeLayout>