<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:tools="http://schemas.android.com/tools"
	    android:layout_width="match_parent"
    	android:layout_height="match_parent"
   	 	android:fillViewport="true"
    	>  

	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    tools:context=".PetmatchResult" 
	    android:background="@drawable/gradient">

	     <TextView 
		     android:id="@+id/lblTop20"
		     android:layout_width="match_parent"
		     android:layout_height="33dp"
		     android:background="#464648"
		     android:gravity="center"
		     android:lines="5"
		     android:paddingLeft="10dp"
		     android:paddingTop="6dp"
		     android:text="@string/title_activity_top20_category"
		     android:textColor="#FFFFFF"
		     android:textSize="20sp"
	     />
	     
	     <TableLayout 
	        android:id="@+id/rel"
	        android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:paddingBottom="@dimen/activity_vertical_margin"
		    android:paddingLeft="@dimen/activity_horizontal_margin"
		    android:paddingRight="@dimen/activity_horizontal_margin"
		    android:paddingTop="@dimen/activity_vertical_margin"
		    android:layout_below="@+id/lblTop20"
		    tools:context=".PetmatchResult"
	    >
	    
	        <TableRow 
	          android:layout_height="wrap_content"
	          android:layout_width="match_parent"
	          >
	          
	            <ImageView 
	                android:contentDescription="@string/lblPetPicture"
	                android:src="@drawable/top20"
	                android:layout_weight="1"
	                />
	            
	            
	            <ImageView 
	                android:contentDescription="@string/lblPetPicture"
	                android:src="@drawable/top20"
	                android:layout_weight="1"
	                android:layout_gravity="right"/>
	            
	        </TableRow> 
	         
	         

		</TableLayout>
	</RelativeLayout>

</ScrollView>
