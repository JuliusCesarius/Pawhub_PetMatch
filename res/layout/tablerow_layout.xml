<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutHTable"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >
 
    <LinearLayout
        android:id="@+id/layoutVTable"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:background="#464648"
        android:orientation="vertical" >

        <WebView
            android:id="@+id/lblPetRatesPicture"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:contentDescription="@string/lblPetPicture"
            android:layout_marginTop="15dp"
            android:paddingBottom="2dp"
            android:src="@drawable/pet_picture" >
        </WebView>

        <TextView
            android:id="@+id/lblPetNameRates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="2dp"
            android:text="Name"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" >
        </TextView>

        <TextView
            android:id="@+id/lblPetVotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="2dp"
            android:text="Votes"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:textStyle="bold" >
        </TextView>

        <TextView
            android:id="@+id/lblPetId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible" >
        </TextView>
    </LinearLayout>

</LinearLayout>