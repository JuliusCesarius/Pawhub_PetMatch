<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="horizontal"
    android:background="#464648"
     >
    <WebView
        android:id="@+id/lblPetRatesPicture"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/pet_picture"
        android:contentDescription="@string/lblPetPicture"
        android:layout_gravity="center" >
    </WebView>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        >
        
         <TextView
        android:id="@+id/lblCategory"
       android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:paddingTop="4dp"
        android:textStyle="bold"
		android:text="Top Category"
         >
        
    </TextView>
    
    <TextView
        android:id="@+id/lblPetNameRates"
       android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:paddingTop="2dp"
        android:textStyle="bold"
		android:text="Name"
         >
    </TextView> 
        
    <TextView
        android:id="@+id/lblPetVotes"
       android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="#FFFFFF"
        android:paddingTop="2dp"
        android:textStyle="bold"
		android:text="Votes"
         >
    </TextView> 
        
    </LinearLayout>

   
</LinearLayout>
