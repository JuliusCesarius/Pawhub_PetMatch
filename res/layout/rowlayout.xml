<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rowlayoutContainer"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@drawable/corner_round"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_round"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical" >
        
		<WebView
        android:id="@+id/lblPetRatesPicture"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:background="#DADBDB"
        android:contentDescription="@string/lblPetPicture"
        android:src="@drawable/pet_picture" >
    </WebView>        
        
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/lblCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:text="Top Category"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" >
        </TextView>

        <TextView
            android:id="@+id/lblPetNameRates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold" >
        </TextView>

        <TextView
            android:id="@+id/lblPetVotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:text="Votes"
            android:textColor="#981E48"
            android:textSize="10sp"
            android:textStyle="bold" >
        </TextView>
    </LinearLayout>

</LinearLayout>